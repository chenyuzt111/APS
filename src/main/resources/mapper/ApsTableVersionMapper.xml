<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.benewake.system.mapper.ApsTableVersionMapper">

    <resultMap id="BaseResultMap" type="com.benewake.system.entity.ApsTableVersion">
            <id property="id" column="id" jdbcType="INTEGER"/>
            <result property="versionNumber" column="version_number" jdbcType="INTEGER"/>
            <result property="versionTime" column="version_time" jdbcType="TIMESTAMP"/>
            <result property="state" column="state" jdbcType="INTEGER"/>

    </resultMap>

    <sql id="Base_Column_List">
        id,version_number,
        version_time,state
    </sql>
    <insert id="incrVersions">
        INSERT INTO aps_table_version (version_number, version_time, state)
        SELECT COALESCE(MAX(version_number), 0) + 1, CURRENT_TIMESTAMP(), 2
        FROM aps_table_version;
    </insert>

</mapper>
